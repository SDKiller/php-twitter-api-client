{
    "name": "marcossegovia/php-twitter-api-client",
    "type": "library",
    "description": "Http client to easy access to Twitter API services",
    "homepage": "https://github.com/MarcosSegovia/php-twitter-api-client",
    "keywords": [
        "twitter",
        "api",
        "http client",
        "guzzle",
        "MarcosSegovia",
        "OAuth 2.0"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Marcos Segovia",
            "email": "velozmarkdrea@gmail.com",
            "homepage": "http://www.marcossegovia.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.6",
        "guzzlehttp/guzzle": "*",
        "commerceguys/guzzle-oauth2-plugin": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "behat/behat": "3.1.*"
    },
    "autoload": {
        "psr-4": {
            "MarcosSegovia\\Twitter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MarcosSegovia\\Twitter\\Test\\": "test/"
        }
    },
    "minimum-stability": "stable"
}
